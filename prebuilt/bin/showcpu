#!/system/bin/sh

function online()
{
    [[ $(cat /sys/devices/system/cpu/$1/online) == 1 ]] && return 0
    return 1
}

echo
echo -e  "\t\t\tCPU0\t\t\tCPU4"
echo -e  "\t\t\t--------------------------------"

echo -en "cpuinfo_cur_freq\t"
echo -en $(cat /sys/devices/system/cpu/cpu0/cpufreq/cpuinfo_cur_freq)
echo -en "\t\t\t"
online "cpu4" && [[ $? == 0 ]] && echo -en $(cat /sys/devices/system/cpu/cpu4/cpufreq/cpuinfo_cur_freq)
echo


echo -en "scaling_max_freq\t"
echo -en $(cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq)
echo -en "\t\t\t"
online "cpu4" && [[ $? == 0 ]] && echo -en $(cat /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq)
echo

echo -en "boost\t\t\t"
echo -en $(cat /sys/devices/system/cpu/cpu0/cpufreq/interactive/boost)
echo -en "\t\t\t"
online "cpu4" && [[ $? == 0 ]] && echo -en $(cat /sys/devices/system/cpu/cpu4/cpufreq/interactive/boost)
echo

let t="$(cat /sys/class/thermal/thermal_zone0/temp) / 1000"
echo "temp\t\t       " $t
